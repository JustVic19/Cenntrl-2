generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  users             users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model classes {
  id              String        @id @default(cuid())
  title           String
  subject         String
  description     String?
  price           Decimal       @db.Decimal(10, 2)
  ageGroup        String?
  schedule        Json?
  stripeProductId String?       @unique
  stripePriceId   String?       @unique
  active          Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  enrollments     enrollments[]
}

model enrollments {
  id                   String   @id @default(cuid())
  studentId            String
  classId              String
  stripeCustomerId     String?
  stripeSubscriptionId String?
  active               Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime
  classes              classes  @relation(fields: [classId], references: [id], onDelete: Cascade)
  users                users    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId])
}

model sessions {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  users        users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model subscriptions {
  id                   String   @id @default(cuid())
  userId               String?
  studentName          String
  studentEmail         String
  studentYear          String
  plan                 String
  courses              Json
  sessionsPerWeek      Int?
  monthlyAmount        Decimal  @db.Decimal(10, 2)
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  status               String   @default("active")
  createdAt            DateTime @default(now())
  updatedAt            DateTime
  users                users?   @relation(fields: [userId], references: [id])
}

model users {
  id                   String                 @id @default(cuid())
  name                 String?
  email                String                 @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  role                 Role                   @default(STUDENT)
  username             String?                @unique
  year                 String?
  subscriptionId       String?                @unique
  ageGroup             String?
  onboarded            Boolean                @default(false)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  accounts             accounts[]
  enrollments          enrollments[]
  auth_sessions        sessions[]
  live_sessions        live_sessions[]
  subscriptions        subscriptions[]
  // Admin relations
  homeworkCreated      homework[]             @relation("HomeworkCreator")
  testsCreated         tests[]                @relation("TestCreator")
  messagesCreated      messages[]             @relation("MessageSender")
  // Student relations
  homeworkSubmissions  homework_submissions[]
  testSubmissions      test_submissions[]
  messageRecipients    message_recipients[]
}

model verification_tokens {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model live_sessions {
  id           String   @id @default(cuid())
  userId       String
  courseName   String
  scheduledAt  DateTime
  meetingLink  String?
  status       String   @default("scheduled") // scheduled, completed, cancelled
  recordingUrl String?
  notes        String?
  attendees    Json?    // Array of user IDs who attended
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  users        users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([scheduledAt])
}

// ============================================
// HOMEWORK SYSTEM
// ============================================

model homework {
  id          String                 @id @default(cuid())
  title       String
  description String?
  fileUrl     String?
  fileType    String?                // pdf, docx, image, link
  dueDate     DateTime?
  assignedTo  String                 // "all", "year_X", or specific user ID
  yearGroup   String?
  createdBy   String
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  creator     users                  @relation("HomeworkCreator", fields: [createdBy], references: [id])
  submissions homework_submissions[]

  @@index([createdBy])
  @@index([dueDate])
}

model homework_submissions {
  id          String    @id @default(cuid())
  homeworkId  String
  studentId   String
  fileUrl     String?
  submittedAt DateTime  @default(now())
  grade       String?
  feedback    String?
  graded      Boolean   @default(false)
  gradedAt    DateTime?
  homework    homework  @relation(fields: [homeworkId], references: [id], onDelete: Cascade)
  student     users     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([homeworkId, studentId])
  @@index([studentId])
}

// ============================================
// TEST SYSTEM
// ============================================

model tests {
  id          String             @id @default(cuid())
  title       String
  description String?
  type        String             // "multiple_choice", "written", "file_upload", "mixed"
  fileUrl     String?
  dueDate     DateTime?
  assignedTo  String             // "all", "year_X", or specific user ID
  yearGroup   String?
  autoGrade   Boolean            @default(false)
  timeLimit   Int?               // minutes
  createdBy   String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  creator     users              @relation("TestCreator", fields: [createdBy], references: [id])
  questions   test_questions[]
  submissions test_submissions[]

  @@index([createdBy])
  @@index([dueDate])
}

model test_questions {
  id            String  @id @default(cuid())
  testId        String
  questionText  String
  questionType  String  // "multiple_choice", "written", "true_false"
  options       Json?   // For multiple choice: ["A", "B", "C", "D"]
  correctAnswer String? // For auto-grading
  points        Int     @default(1)
  orderIndex    Int
  test          tests   @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@index([testId])
}

model test_submissions {
  id          String    @id @default(cuid())
  testId      String
  studentId   String
  answers     Json      // Student answers
  fileUrl     String?
  submittedAt DateTime  @default(now())
  score       Float?
  maxScore    Float?
  grade       String?
  feedback    String?
  graded      Boolean   @default(false)
  gradedAt    DateTime?
  test        tests     @relation(fields: [testId], references: [id], onDelete: Cascade)
  student     users     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([testId, studentId])
  @@index([studentId])
}

// ============================================
// MESSAGING SYSTEM
// ============================================

model messages {
  id         String               @id @default(cuid())
  subject    String
  content    String
  sentBy     String
  sentTo     String               // "all", "year_X", user ID, or "parents"
  yearGroup  String?
  createdAt  DateTime             @default(now())
  sender     users                @relation("MessageSender", fields: [sentBy], references: [id])
  recipients message_recipients[]

  @@index([sentBy])
  @@index([createdAt])
}

model message_recipients {
  id        String    @id @default(cuid())
  messageId String
  userId    String
  read      Boolean   @default(false)
  readAt    DateTime?
  message   messages  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId])
}

enum Role {
  STUDENT
  PARENT
  TUTOR
  ADMIN
  VISITOR
}
